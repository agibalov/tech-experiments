{
  "name": "graphql-experiment",
  "version": "0.0.0",
  "scripts": {
    "fe:build": "ng build",
    "fe:watch": "ng serve",
    "be:build": "rimraf backend/dist && tsc -p backend/tsconfig.json",
    "be:start": "ts-node --project backend/tsconfig.json backend/src/main.ts",
    "be:watch": "nodemon --watch ./backend/src --ext ts --exec 'yarn' be:start",
    "be:test": "jest",
    "be:test:watch": "jest --watch",
    "be:test:e2e": "jest --config ./backend/test/jest-e2e.json",
    "graphql-codegen": "graphql-codegen",
    "watch": "concurrently \"yarn fe:watch\" \"yarn be:watch\"",
    "build": "yarn graphql-codegen && yarn be:build && yarn fe:build",
    "start": "node backend/dist/main.js",
    "lint": "tslint -p backend/tsconfig.json -c backend/tslint.json && tslint -p frontend/tsconfig.app.json -c frontend/tslint.json",
    "test": "yarn be:test:e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.1.2",
    "@angular/common": "~8.1.2",
    "@angular/compiler": "~8.1.2",
    "@angular/core": "~8.1.2",
    "@angular/forms": "~8.1.2",
    "@angular/platform-browser": "~8.1.2",
    "@angular/platform-browser-dynamic": "~8.1.2",
    "@angular/router": "~8.1.2",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/graphql": "^6.4.2",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/serve-static": "^1.0.1",
    "apollo-angular": "^1.6.0",
    "apollo-angular-link-http": "^1.8.0",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link": "^1.2.12",
    "apollo-link-ws": "^1.0.18",
    "apollo-server-express": "2.14.2",
    "bulma": "^0.7.5",
    "graphql": "^14.4.2",
    "jest": "^24.8.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "~6.4.0",
    "subscriptions-transport-ws": "^0.9.16",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.801.2",
    "@angular/cli": "~8.1.2",
    "@angular/compiler-cli": "~8.1.2",
    "@angular/language-service": "~8.1.2",
    "@graphql-codegen/add": "^1.5.0",
    "@graphql-codegen/cli": "^1.5.0",
    "@graphql-codegen/typescript": "^1.5.0",
    "@graphql-codegen/typescript-apollo-angular": "^1.5.0",
    "@graphql-codegen/typescript-operations": "^1.5.0",
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.2.3",
    "@types/jest": "^23.3.13",
    "@types/node": "^12.7.1",
    "@types/supertest": "^2.0.7",
    "apollo-server-testing": "^2.8.1",
    "codelyzer": "^5.0.0",
    "concurrently": "^4.1.0",
    "graphql-tag": "^2.10.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  }
}
